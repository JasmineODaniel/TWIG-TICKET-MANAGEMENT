document.getElementById('create-ticket').addEventListener('submit', function(e){
  e.preventDefault();
  const title = this.title.value.trim(); 
  const status = this.status.value;

  if(!title){  
    alert('Title is required'); return;   
  }
  if(!['open','in_progress','closed'].includes(status)){
    alert('Status must be open, in_progress, or closed'); return; 
  }

  let tickets = JSON.parse(localStorage.getItem('tickets') || '[]');
  tickets.push({id: Date.now(), title, status, description: this.description.value}); 
  localStorage.setItem('tickets', JSON.stringify(tickets));
  window.location.href = '/tickets';
});
 
 
